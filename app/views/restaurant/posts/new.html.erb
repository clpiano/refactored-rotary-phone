<div class="container">
  <h5 class="mt-3">新規投稿</h5>
  <div class="row justify-content-center">
    <%= form_with model: @post, url: restaurant_posts_path, local: true do |f| %>
    <%#エラーメッセージ%>
    <%= render 'layouts/errors', obj: @post %>
      <div class="form-group row">
        <%= f.label :投稿内容 %>
        <%= f.text_area :content, class:"form-control", size: "30x5" %>
      </div>
      <div class="form-group row">
        <%= f.label :URL, "URL" %>
        <%= f.text_field :link, class:"form-control", placeholder:"投稿にリンクを貼ることができます" %>
      </div>
      <div class="form-group row">
        <%= f.label :写真, class:"mr-3" %>
        <%= f.file_field :image %>
      </div>
      <div class="form-group row">
        <%= f.label :予約ステータス, class:"mr-3" %>
        <%= f.radio_button :reservation_status, :true, checked: true %>
        <%= f.label :reservation_status, "予約受付中", class:"mr-3" %>
        <%= f.radio_button :reservation_status, :false %>
        <%= f.label :reservation_status, "予約停止中" %>
      </div>
      <div class="form-group text-center">
        <%= f.submit "投稿", class:"btn btn-success mt-3" %>
      </div>
    <% end %>
  </div>
</div>