<div class="container">
  <h5 class="mt-3">投稿編集</h5>
  <div class="row justify-content-center">
    <%= form_with model: @post, url: restaurant_post_path(@post), method: :patch do |f| %>
      <div class="form-group row">
        <%= f.label :投稿内容 %>
        <%= f.text_area :content, class:"form-control", size: "30x5" %>
      </div>
      <div class="form-group row">
        <%= f.label :URL, "URL" %>
        <%= f.text_field :link, class:"form-control" %>
      </div>
      <div class="form-group row">
        <%= f.label :写真, class:"mr-3" %>
        <%= f.file_field :image %>
      </div>
      <div class="form-group row">
        <%= f.label :予約ステータス, class:"mr-3" %>
        <%= f.radio_button :reservation_status, :true, checked: true %>
        <%= f.label :reservation_status, "予約受付中", class:"mr-3" %>
        <%= f.radio_button :reservation_status, :false %>
        <%= f.label :reservation_status, "予約停止中" %>
      </div>
      <div class="form-group text-center">
        <%= f.submit "再投稿", class:"btn btn-success m-3" %>
        <%= link_to "戻る", restaurant_post_path(@post), class:"btn btn-primary m-3" %>
      </div>
    <% end %>
  </div>
</div>