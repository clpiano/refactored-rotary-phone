<div class="container">
  <h5 class="m-4">投稿編集</h5>
  <div class="row justify-content-center">
    <%= form_with model: @post, url:restaurant_post_path(@post), method: :patch do |f| %>
      <div class="form-group row">
        <%= f.label :Text %>
        <%= f.text_area :content, class:"form-control", size: "30x5" %>
      </div>
      <div class="form-group row">
        <%= f.label :ホームページ %>
        <%= f.text_field :home_page, class:"form-control" %>
      </div>
      <div class="form-group row">
        <%= f.label :写真, class:"mr-3" %>
        <%= f.file_field :image %>
      </div>
      <div class="form-group row">
        <%= f.label :業態, class:"mr-3" %>
        <%= f.select :category, [["カフェ・スイーツ",0], ["和食",1], ["洋食",2], ["中華",3], ["アジア・エスニック",4], ["イタリアン",5], ["カレー",6], ["居酒屋・バー",7],["その他",8]], { include_blank: "選択してください"} %>
      </div>
      <div class="form-group row">
        <%= f.label :予約ステータス, class:"mr-3" %>
        <%= form_with model: @post, url:restaurant_post_path(@post) do |form| %>
          <%= form.radio_button :reservation_status, :true, checked: true %>
          <%= f.label :reservation_status, "予約受付中", class:"mr-3" %>
          <%= form.radio_button :reservation_status, :false %>
          <%= f.label :reservation_status, "予約不可" %>
      </div>
      <div class="form-group text-center">
        <%= f.submit "再投稿", class:"btn btn-success m-3" %>
        <%= link_to "戻る", restaurant_post_path(@post), class:"btn btn-primary m-3" %>
      </div>
      <% end %>
    <% end %>
  </div>
</div>