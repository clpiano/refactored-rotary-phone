<div class="container">
  <h5 class="m-4">飲食店ログイン</h5>
  <div class="row justify-content-center">
    <%= form_with model: @restaurant, url: restaurant_session_path, method: :post do |f| %>
      <div class="form-group row m-2">
        <%= f.label :"E-mail", class:"col-sm-5" %>
        <%= f.email_field :email, class:"col-sm-7" %>
      </div>

      <div class="form-group row m-2">
        <%= f.label :パスワード, class:"col-sm-5" %>
        <%= f.password_field :password, class:"col-sm-7" %>
      </div>

      <div class="form-group row justify-content-center mt-4">
        <%= f.submit "ログイン", class:"btn btn-success" %>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center">
    <p>新規で登録したい場合は<%= link_to "こちら", new_restaurant_registration_path %>から</p>
  </div>
</div>
<%#= render "restaurant/shared/links" %>