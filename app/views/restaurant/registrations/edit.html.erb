<div class="container">
  <h5 class="mt-3">飲食店情報編集</h5>
  <div class="row justify-content-center">
    <%= form_with model: @restaurant, url:restaurant_registration_path, method: :patch do |f| %>
      <%#エラーメッセージ%>
      <%= render "restaurant/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :店名 %>
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :ジャンル %>
        <%= f.select :genre, [["カフェ・スイーツ"], ["和食"], ["洋食"], ["中華"], ["アジア・エスニック"], ["イタリアン"], ["カレー"], ["居酒屋・バー"],["その他"]], { include_blank: "選択してください"}, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :郵便番号 %>
        <%= f.text_field :zipcode, class:"form-control", placeholder:"0000000" %>
      </div>
      <div class="form-group">
        <%= f.label :住所, "住所(数字とハイフンは全角)" %>
        <%= f.text_field :address, class:"form-control", placeholder:"東京都○○区○○町０－０－０" %>
      </div>
      <div class="form-group">
        <%= f.label :TEL,"TEL" %>
        <%= f.text_field :phone_number, class:"form-control", placeholder:"0000000000" %>
      </div>
      <div class="form-group">
        <%= f.label :営業時間 %>
        <%= f.time_select :start_time, :minute_step => 10, class:"form-control" %>～<%= f.time_select :finish_time, :minute_step => 10, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :定休日 %>
        <%= f.text_field :regular_holiday, class:"form-control", placeholder:"例）毎週木曜日" %>
      </div>
      <div class="form-group">
        <%= f.label :Webサイト %>
        <%= f.text_field :web_site, class:"form-control", placeholder: "リンクをはって下さい" %>
      </div>
      <div class="form-group">
        <%= f.label :"お客様へ(予約時の注意事項など)"%>
        <%= f.text_field :notice, class:"form-control", placeholder:"例）ラストオーダーは営業終了30分前です" %>
      </div>
      <div class="form-group">
        <%= f.label :"E-mail" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :お店の写真 %>
        <%= f.file_field :image %>
      </div>
      <div class="actions text-center">
        <%= f.submit "編集", class:"btn btn-success m-3" %>
        <%= link_to "戻る", :back, class:"btn btn-primary m-3" %>
      </div>
    <% end %>
  </div>
</div>
