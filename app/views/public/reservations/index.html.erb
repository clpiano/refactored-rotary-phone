<div class="container">
  <h5 class="m-3">予約一覧</h5>
  <div class="row">
    <table class="table">
      <thead>
        <th>予約したお店</th>
        <th>予約人数</th>
        <th>予約時間</th>
        <th>ステータス</th>
        <th>詳細</th>
      </thead>
      <% @reservations.each do |reservation| %>
      <tbody>
        <td><%= reservation.restaurant.name %></td>
        <td><%= reservation.number_of_people %></td>
        <td><%= reservation.reservation_time.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= reservation.approval_status_i18n %></td>
        <td><%= link_to "詳細", restaurant_reservation_path(reservation.restaurant, reservation) %></td>
      </tbody>
    <% end %>
    </table>
  </div>
</div>