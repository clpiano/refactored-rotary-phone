<div class="container">
  <h5 class="m-3">会員マイページ</h5>
    <table class="table row justify-content-center">
      <tr>
        <th>氏名</th>
        <td><ruby><%= @customer.name %><rt><%= @customer.kana_name %></rt></ruby></td>
      </tr>
      <tr>
        <th>E-mail</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td>
          〒<%= @customer.zipcode %><br>
          <%= @customer.address %>
        </td>
      </tr>
      <tr>
        <th>TEL</th>
        <td><%= @customer.phone_number %></td>
      </tr>
    </table>
    <div class="row justify-content-center">
      <%= link_to "編集する", edit_information_path, class:"btn btn-success" %>
    </div>
    <div class="row justify-content-end mr-5">
      <%= link_to "いいねした投稿を見る>>", favorites_path %>
    </div>
  </div>
</div>