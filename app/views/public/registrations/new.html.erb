<div class="container">
  <h5 class="mt-3">会員新規登録</h5>
  <div class="row justify-content-center">
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%#エラーメッセージ%>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group row">
        <%= f.label :氏名 %>
        <%= f.text_field :name, class:"form-control", placeholder:"山田太郎" %>
      </div>
      <div class="form-group row">
        <%= f.label :フリガナ %>
        <%= f.text_field :kana_name, class:"form-control", placeholder:"ヤマダタロウ" %>
      </div>
      <div class="form-group row">
        <%= f.label :郵便番号 %>
        <%= f.text_field :zipcode, class:"form-control", placeholder:"0000000" %>
      </div>
      <div class="form-group row">
        <%= f.label :住所 %>
        <%= f.text_field :address, class:"form-control", placeholder:"東京都○○区○○町１－１－１" %>
      </div>
      <div class="form-group row">
        <%= f.label :TEL,"TEL" %>
        <%= f.text_field :phone_number, class:"form-control", placeholder:"0000000000" %>
      </div>
      <div class="form-group row">
        <%= f.label :"E-mail" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
      <div class="form-group row">
        <%= f.label :パスワード %>
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"6文字以上" %>
      </div>
      <div class="form-group row">
        <%= f.label :再入力 %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"6文字以上" %>
      </div>
      <div class="actions text-center">
        <%= f.submit "登録", class:"btn btn-success" %>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center m-2">
    <p>新規登録がお済みの場合は<%= link_to "こちら", customer_session_path %></p>
  </div>
</div>