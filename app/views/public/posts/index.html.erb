<div class="container">
  <h5 class="mt-3">投稿一覧</h5>
  <%#折り畳み検索フォーム%>  
  <%= render 'search', q: @q %>
  
  <%#投稿一覧%>
  <div class="row justify-content-center">
    <%= render 'index', posts: @posts %>
  </div>
  <%#ページネーション%>
  <div class="row justify-content-center">
    <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>