<div class="container">
  <h5 class="m-3">投稿一覧</h5>
  <div class="row justify-content-center">
    <div>
      <% @posts.each do |post| %>
        <div class="card mb-2" style="width: 15rem;">
          <%#写真があれば表示%>
          <% if post.image.attached? %>
            <%= image_tag post.image, size: "130x100", class:"card-img-top" %>
          <% end %>
          <div class="card-body">
            <%#店舗名%>
            <h5><%= post.restaurant.name %></h5>
            <%#投稿内容%>
            <%= simple_format(post.content) %>
            <%#リンク%>
            <%= Rinku.auto_link(post.home_page, :all, 'target="_blank"').html_safe %>
            <%#予約ステータス%>
            <% if post.reservation_status == true %>
              <p class="text-success text-center">予約受付中</p>
            <% else %>
              <p class="text-muted text-center">予約停止中</p>
            <% end %>
          </div>
          <font class="text-center" size="2">
            <%= link_to "詳細へ", post_path(post) %>
          </font>
          <font class="text-right" size="2">
            <%#投稿日時%>
            <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
          </font>
        </div>
      <% end %>
    </div>
  </div>
</div>