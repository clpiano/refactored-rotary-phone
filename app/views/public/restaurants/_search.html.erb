<%#飲食店一覧と検索結果で使用%>
<div class="text-right mb-2">
  <button data-toggle="collapse" href="#collapse1" style="color:light;" class="btn btn-sm btn-dark">検索フォーム</button>
</div>
<div id="collapse1" class="panel-collapse collapse">
  <%#キーワード検索フォーム%>
  <div class="col-sm-12 mt-3 text-right">
    <%= search_form_for q, url: search_restaurants_path do |f| %>
      <%= f.label :name_or_genre_or_address, "キーワード検索" %>
      <%= f.search_field :name_or_zipcode_or_address_cont, placeholder:"店名、〒、住所を入力" %>
      <%= f.submit '検索' %>
    <% end %>
  </div>
  <%#絞り込み検索フォーム%>
  <div class="col-sm-12 text-right">
    <%= search_form_for q, url: search_restaurants_path do |f| %>
      <%= f.label :"ジャンルで絞り込む" %>
      <%= f.select :genre_eq, [["カフェ・スイーツ"], ["和食"], ["洋食"], ["中華"], ["アジア・エスニック"], ["イタリアン"], ["カレー"], ["焼肉"], ["居酒屋・バー"],["その他"]], { include_blank: "選択してください"} %>
      <%= f.submit '検索' %>
    <% end %>
  </div>
</div>